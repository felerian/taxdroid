<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TaxDroidTheme" parent="@android:Theme.Holo" />
    <style name="text_default" parent="@android:style/TextAppearance.Holo">
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="text_good" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">#005500</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="text_good_bold" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">#00BB00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="text_bad" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">#880000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="text_bad_bold" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="menu_button">
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
